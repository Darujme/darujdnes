.projects
	background-color $c-bg
	padding-top 80px
	&-list
		//
	&-item
		position relative
		transform translate(0, 0)
		background-size cover
		background-repeat no-repeat
		background-position center center
		&-img
			display block
			width 100%
		&-logo
			size 50px
			background-color #fff
			border-radius 50%
			position relative
			overflow hidden
			margin auto
			img
				absolute-center()
			&-name
				font-size 14px
				margin-top 5px
		&-hr
			margin 10px auto
			background-color #fff
			height 2px
			opacity .35
		&-subtitle
			font-size 12px
			color $c-primary
			font-weight bold
			letter-spacing 2px
			font-weight 600
		&-title.title
			font-size 19px
		&-in
			absolute-fill()
			background-color rgba(#000000, .45)
			color #fff
			padding 20px
		&-btn
			absolute left right bottom 20px

	@media $768M
		&-list
			margin-left -20px
			margin-right -20px
		&-item
			border-bottom 1px solid #fff

	@media $768
		border-top 1px solid $c-border
		border-bottom 1px solid $c-border
		padding-bottom 60px
		&-list
			space-between()
		&-item
			display inline-block
			vertical-align top
			width 48%
			max-width 360px
			margin-bottom 20px
			&-hr
				margin 15px auto

	@media $768-1000
		&-item
			margin-bottom 25px

	@media $1000
		&-item
			width 32%

