.btn
	border 0
	text-decoration none
	background-color transparent
	display inline-block
	vertical-align middle
	cursor pointer
	position relative
	outline 0
	user-select none
	text-align center
	transition .2s ease all
	white-space nowrap
	&.view-secondary
	&.view-secondary-s
		background-color $c-secondary
		color #fff
		font-weight bold
		border-radius $radius
	&.view-secondary
		font-size 18px
		padding 5px 20px
	&.view-secondary-s
		font-size 16px
		padding 6px 40px
		&.view-short
			padding-left 20px
			padding-right 20px
	&.view-full
		width 100%
	&.view-disabled
		background-color #9E9E9E
		cursor not-allowed

	@media $768
		&.view-secondary
			font-size 22px
			padding 8px 40px

	@media $1000
		&.view-secondary
		&.view-secondary-s
			&:hover
				transform scale(1.05)
