.tile
	color #fff
	font-size 16px
	position relative
	&-title
		font-size 25px
		font-weight bold
	&-img
		display block
		margin 10px auto
		border-radius 50%
	&-in
		p
			margin 0
			font-size 15px
			line-height 1.5
		a
			color #fff
		.large
			font-size 18px

	@media $1000M
		&-in
			padding 100px 0
	@media $768M
		&-in
			padding 30px 0
	@media $1000
		&-in
			absolute-center()
			width 100%
