.basic
	font-size $f-base-size
	line-height $f-base-lh
	h1,h2,h3,h4,h5,h6
		font-weight bold
		margin-top 50px
	h1
		font-size 35px
		line-height 1.1
		margin 50px 0 20px
	h2
		font-size 21px
		margin 0 0 30px
	hr
		max-width 430px
		background #DCDCDC
		height 1px
		border 0
		margin 30px auto
	p
		margin 0 0 20px
	a
		color $c-primary
		transition .3s ease all
	img
		margin 20px 0
		&.alignright
			float right
			margin-left 20px
		&.alignleft
			float left
			margin-right 20px
		&.aligncenter
			display block
			margin 20px auto
	table
		border-collapse collapse
		margin 40px 0
		td
		tr
			padding 10px
			border 2px solid
	ul
	ol
		margin 40px 0
		padding-left 0
		list-style none
		li
			margin 30px 0
			position relative
			max-width 500px
			line-height 1.3
			padding-left 30px
			b
				font-weight 600
			&:before
				content ''
				size 15px
				background-color $c-primary
				opacity .5
				border-radius 50%
				absolute left top 3px
	:first-child
		margin-top 0
	:last-child
		margin-bottom 0

	@media $1000
		a:hover
			color #000
